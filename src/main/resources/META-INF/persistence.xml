<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="babysitter_pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>Source.Child</class>
        <class>Source.Parent</class>
        <class>Source.Babysitter</class>
        <class>Source.Rent</class>
        <class>Source.BabysitterType</class>
        <class>Source.ChildBabysitter</class>
        <class>Source.InfantBabysitter</class>
        <class>Source.ToddlerBabysitter</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <shared-cache-mode>NONE</shared-cache-mode>
        <validation-mode>CALLBACK</validation-mode>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/nbddb"/>
            <property name="jakarta.persistence.jdbc.user" value="nbd"/>
            <property name="jakarta.persistence.jdbc.password" value="nbdpassword"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="hibernate.connection.pool_size" value="5"/>
            <property name="hibernate.connection.isolation" value="2" />
        </properties>
    </persistence-unit>
</persistence>
